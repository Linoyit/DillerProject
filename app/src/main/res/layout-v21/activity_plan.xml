<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#eceff1"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_volunteer"
        android:layout_width="369dp"
        android:layout_gravity="center"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:background="@drawable/shaped_box"
        android:elevation="10dp"

        android:padding="32dp">

        <TextView
            android:id="@+id/tv_volunteer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textStyle="bold"
            android:text="@string/volunteerTitle"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_volunteer_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingTop="16dp"
            android:paddingEnd="32dp"
            android:paddingBottom="16dp"
            android:text="@string/volunteerHour" />

        <TextView
            android:id="@+id/tv_volunteer_place"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingTop="16dp"
            android:paddingEnd="32dp"
            android:paddingBottom="16dp"
            android:text="@string/volunteerLocation" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/directionLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:background="#78909c"
                android:textColor="@android:color/white"
                android:text="@string/directionLink" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_celebrate"
        android:layout_width="369dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:elevation="10dp"
        android:background="@drawable/shaped_box"
        android:orientation="vertical"
        android:padding="32dp">

        <TextView
            android:id="@+id/tv_celebrate"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"

            android:text="@string/celebrateTitle"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_celebrate_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:paddingStart="16dp"
            android:paddingTop="16dp"
            android:paddingEnd="32dp"
            android:paddingBottom="16dp"
            android:text="@string/celHour" />

        <TextView
            android:id="@+id/tv_celebrate_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingTop="16dp"
            android:paddingEnd="32dp"
            android:paddingBottom="16dp"
            android:text="@string/celLocation" />

        <Button
            android:id="@+id/directionLink2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#78909c"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:textColor="@android:color/white"
            android:text="@string/directionLink" />
    </LinearLayout>

</LinearLayout>